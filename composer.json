{
  "name": "spacetab-io/body-validator",
  "description": "Package to simplify validation of request body.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "roquie",
      "email": "roquie0@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "spacetab-io/harmony-validation": "^1.1",
    "spacetab-io/obelix": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "phpstan/phpstan": "^0.12.5",
    "symfony/var-dumper": "^5.0",
    "amphp/phpunit-util": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Spacetab\\BodyValidator\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spacetab\\Tests\\BodyValidator\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "phpunit --coverage-text",
      "phpstan analyse src --level 8"
    ]
  }
}
